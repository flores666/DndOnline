@model DndOnline.DataAccess.Objects.Lobby

@{
    Layout = "_LobbyLayout";
}

<div class="container">
</div>

<div class="tools">
    <div class="top">
        <a class="exit" href="/" title="Выйти">
            <img src="/img/logout.png"/>
        </a>
    </div>
    <ul class="list">
        <ul id="player_list" class="list-item">
            <div class="list-header"><span class="plus"></span> Игроки </div>
            <div class="list-body hidden">
                @foreach (var player in Model.Players)
                {
                    <li class="list-item-child">@player.Name</li>
                }
            </div>
        </ul>
        <ul class="list-item">
            <div class="list-header"><span class="plus"></span> Токены </div>
            <div class="list-body hidden">
                @foreach (var character in Model.Entities)
                {
                    <li class="list-item-child">@character.Name</li>
                }
            </div>
        </ul>
    </ul>
</div>


<script src="~/js/lobbyMaster.js"></script>