@model DndOnline.DataAccess.Objects.Lobby

@{
    Layout = "_LobbyLayout";
}

<div class="top">
    <div class="left tabs">
        @foreach (var item in Model.Maps)
        {
            <div class="tab nav-scene" data-src="@item.Path">
                <p>
                    @(item.Name.Length > 20 ? item.Name.Substring(0, 20) : item.Name)
                </p>
            </div>
        }
        <div class="tab selected">
            <p>
                Болото
            </p>
        </div>
        <div class="tab export">
            <p>Экспорт</p>
        </div>
    </div>
    <div class="right">
        <a class="exit float-end" href="/" title="Выйти">
            <img src="/img/logout.png"/>
        </a>
    </div>
</div>

<div class="container">
    <div class="game"></div>

    <div class="tools">
        <ul class="list">
            <ul id="player_list" class="list-item">
                <div class="list-header"><span class="minus"></span> Игроки </div>
                <div class="list-body">
                    @foreach (var player in Model.Players)
                    {
                        <li class="list-item-child">@player.Name</li>
                    }
                </div>
            </ul>
            <ul class="list-item">
                <div class="list-header"><span class="minus"></span> Токены </div>
                <div class="list-body">
                    @foreach (var character in Model.Entities)
                    {
                        <li class="list-item-child">@character.Name</li>
                    }
                </div>
            </ul>
        </ul>
    </div>
</div>

<script src="~/js/lobbyMaster.js"></script>