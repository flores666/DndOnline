@model LobbyFormViewModel

<div id="new-lobby">
    <div class="d-flex lobby-creation-header">
        <h1 class="pb-2 col-10">
            @Model.Name
        </h1>

        <button form="page-form" class="col-1 btn" type="submit">Создать</button>
    </div>

    <form id="page-form" method="post" enctype="multipart/form-data" asp-action="NewLobby">
        <div class="row">
            <div class="col-9">
                <label asp-for="Name"></label>
            </div>
            <div class="col-2">
                <label asp-for="MaxPlayers"></label>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-9">
                <input autocomplete="off" class="input-field form-control" asp-for="Name"/>
                <small>Будет отображаться в поиске</small>
                <span asp-validation-for="Name" hidden="hidden"></span>
            </div>

            <div class="form-group col-2">
                <input autocomplete="off" class="input-field form-control text-center" asp-for="MaxPlayers"/>
                <span asp-validation-for="MaxPlayers" hidden="hidden"></span>
            </div>
        </div>

        <div class="row">
            <label asp-for="Description"></label>
        </div>

        <div class="row">
            <div class="form-group mb-0">
                <textarea class="auto-textarea input-field col-11 description-textarea" asp-for="Description"></textarea>
            </div>
        </div>

        <div class="row">
            <small class="pb-2">Игровые элементы можно добавить позже, во время игры.</small>
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger validation-summary" })
    </form>
</div>