@model IEnumerable<LobbyFormViewModel>

@if (!Model.Any())
{
    <p class="text-center">Пусто</p>
}
else
{
    <div class="list-group list-group-flush lobby-list">
        @foreach (var item in Model)
        {
            <div class="list-group-item lobby-list-item" id="@item.Id">
                <div class="row">
                    <div class="header col lobby-list-header">
                        <p>@item.Name</p>
                    </div>
                    <div class="col-2 float-end d-flex">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 mr-2 text-gray-500">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                        <p class="ps-1">Игроки: @item.PLayersCount/@item.MaxPlayers</p>
                    </div>
                </div>
            </div>
        }
    </div>
}