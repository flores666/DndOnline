@model List<DndOnline.DataAccess.Objects.Lobby>

@{
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex w-100 justify-content-center lobby-search-container">
        <input class="input-field" id="lobby_search" type="text">
        <button class="unset ms-4">Новое лобби</button>
    </div>
</div>

<div class="lobby-list">
    @for (int i = 0; i < 11; i++)
    {
        <div class="lobby-item">
            <div class="p-4">
                <h1>item.Name</h1>
                <div class="d-flex align-items-center align-bottom">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 mr-2 text-gray-500">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <p class="mb-0 ms-2">Players: 5/10</p>
                </div>
            </div>
        </div>
    }
</div>